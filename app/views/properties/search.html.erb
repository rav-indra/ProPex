<span class="input-group rounded">
  <%= form_tag(search_path, :method => "get") do %>
    <span><%= text_field_tag :search, params[:search], class: "form-control rounded", placeholder: "Search..." %></span>
  <% end %>
</span>
<h1>Properties</h1>
    <% @results.each do |prop| %>
      <p>
        <strong>Name:</strong>
        <%= prop.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= prop.description %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= prop.address %>
      </p>

      <p>
        <strong>City:</strong>
        <%= prop.city %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= prop.price %>
      </p>
    <% end %>