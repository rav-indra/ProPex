<% props = Property.where(buyer_id: current_user.id) %>

<h1 style="margin-top: 130px; text-align:center;">Purchased Properties</h1>

<section class="property-grid grid">
  <div class="container">
    <div class="row">
      <% props.each do |property| %>
        <% seller = User.find(property.user_id) %>
        <div class="box">
          <div class="row">
            <div class="col-sm-12 col-md-6" style="float:right;" >
              <div class="testimonial-img">
                <%= link_to property, class: "link-a" do  %>
                  <%= render property %>
                <% end %>
              </div>
            </div>
            <div class="col-sm-12 col-md-6" style="float:left;">
              <div class="testimonial-author-box text-center">
                <h2>Property Details:</h2>
              </div>
              <div class="content">
                <p class="testimonial-text fs-5">
                  <b>Name: </b><%=  property.name %><br/>
                  <b>Description: </b><%=  property.description %><br/>
                  <b>Location: </b><%=  property.address %>,<%=  property.city %><br/>
                </p>
              </div>
              <div class="testimonial-author-box text-center">
                <h2>Seller Details:</h2>
              </div>
              <div class="content">
                <p class="testimonial-text fs-5">
                  <b>Name: </b><%=  seller.name %><br/><br/><br/>
                  <b>Email: </b><%=  seller.email %>
                </p>
              </div>
            </div>
          </div>
        </div>            
      <% end %>
    </div>
  </div>
</section><!-- End Property Grid Single-->
