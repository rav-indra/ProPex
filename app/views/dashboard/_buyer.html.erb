<h1>Purchased Properties</h1>

<section class="property-grid grid">
  <div class="container">
    <div class="row">
      <% @buyer_props.each do |property| %>
        <% seller = User.find(property.user_id) %>
        <div class="box">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <div class="testimonial-img">
                <%= link_to property, class: "link-a" do  %>
                  <%= render property %>
                <% end %>
              </div>
            </div>
            <div class="col-sm-12 col-md-6">
              <%# Propert Details %>
              <%= render partial: "property_details", locals: {property: property} %>
              <%# Seller Details %>
              <div class="testimonial-author-box text-center">
                <h2>Seller Details:</h2>
              </div>
              <div class="content">
                <p class="testimonial-text fs-5">
                  <b>Name: </b><%= seller.name %><br/>
                  <b>Email: </b><%= seller.email %>
                </p>
              </div>
            </div>
          </div>
        </div>            
      <% end %>
    </div>
  </div>
</section><!-- End Property Grid Single-->
